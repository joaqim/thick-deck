{
  "name": "react-typescript-webpack-starter",
  "version": "2.1.0",
  "description": "A starter project for using React, TypeScript, SCSS and Webpack",
  "main": "index.js",
  "scripts": {
    "build-all": "npm run build && npm run docs && npm test",
    "precommit": "build-all",
    "prepare": "husky install",
    "prepush": "npm test",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "test": "jest --maxWorkers=3",
    "test:watch": "jest --watch --maxWorkers=3",
    "test:ci": "jest --runInBand",
    "docs": "typedoc ./src --out ./docs; touch docs/.nojekyll",
    "dev": "webpack serve --mode development --progress --hot --config ./webpack.config.development.js",
    "build": "webpack --mode production --config ./webpack.config.production.js"
  },
  "keywords": [
    "react",
    "typescript",
    "webpack",
    "scss"
  ],
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/node": "^16.4.10",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "mini-css-extract-plugin": "^1.6.0",
    "postcss": "^8.2.14",
    "postcss-loader": "^5.2.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.2",
    "sass": "^1.32.12",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.1.2",
    "typedoc": "^0.21.5",
    "typescript": "^4.2.4",
    "typescript-eslint": "^0.0.1-alpha.0",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  }
}
